<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ToggleButton
        android:id="@+id/toggleButton_otherSetting_ageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:checked="false"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView_gallery_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignBaseline="@+id/toggleButton_otherSetting_ageView"
        android:layout_alignBottom="@+id/toggleButton_otherSetting_ageView"
        android:layout_alignParentLeft="true"
        android:text="@string/agenotview"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_gallery_date"
        android:layout_below="@+id/toggleButton_otherSetting_ageView"
        android:text="@string/groupvisible"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ToggleButton
        android:id="@+id/toggleButton_otherSetting_groupView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:text="ToggleButton" />

</RelativeLayout>